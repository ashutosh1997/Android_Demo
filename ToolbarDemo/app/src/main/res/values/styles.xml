<resources>

    <!-- Base application theme. -->
    <style name="MaterialTheme" parent="ParentMaterialTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="ParentMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Parent Theme for all devices i.e. for both Lollipop & pre-Lollipop devices. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlHighlight">#80CBC4</item>
        <item name="colorButtonNormal">#009688</item>
        <item name="colorControlActivated">#FFAB40</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColorPrimary">@android:color/white</item> <!--Toolbar Title color-->
        <item name="android:textColorSecondary">@android:color/white</item> <!--Toolbar Subtitle color-->
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColorPrimary">@android:color/black</item> <!--popup menu text color-->
        <item name="android:background">@android:color/white</item> <!--popup menu background-->
    </style>

</resources>
